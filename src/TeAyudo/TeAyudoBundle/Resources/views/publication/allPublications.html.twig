{% extends 'TeAyudoBundle:Default:base.html.twig' %} 
{% block middleAction %} 
<center style="margin-top: 81px;">
<button id="newCycleBtn" class="middleHeader btn btn-primary btn-lg"><h4 class="glyphicon glyphicon-plus"></h4>&nbsp;&nbsp;Crear un Nuevo Ciclo</button>
</center>
{% endblock %}

{% block rightMenu%}
<script type="text/javascript" src="{{ asset('bundles/TeAyudo/js/main.js') }}">
</script>
 
<div class="headHome">
	<h2 class="form-signin-heading">Bienvenido</h2>
	<h4>{{ username }}</h5>
</div>
<ul class="nav nav-pills mainMenu">
	 <li class="active"><a href="./main">Inicio</a></li>
	 <li><a	href="./myCycles">Mis Ciclos</a></li>
	 <li><a href="./myAccount">Mi Cuenta</a>
	 </li>
</ul>
<span class="headHome"><a href="logout">Salir</a></span>
{% endblock %} 

{%block content %}
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist" style="margin-top:30px;" id="myTab">
  <li class="active"><a href="#needed" role="tab" data-toggle="tab">Necesitan tu Ayuda</a></li>
  <li><a href="#offered" role="tab" data-toggle="tab">Ofrecen su Ayuda</a></li>
  <li><a href="#all" role="tab" data-toggle="tab">Todos</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane fade active" id="needed">
  		<h3>Ciclos para Dar una Mano</h3>
  		<table class="table table-striped">
          		<tr>
          			<th>Título</th>
          			<th>Descripción</th>
          			<th>Fecha</th>
          			<th>Terminado</th>
          			<th>Activo</th>
          			<th>Ver</th>
          		</tr>
  				{% for cycle in neededCycles %}
  				<tr>
        			<td>{{ cycle.title }}</td>
        			<td>{{ cycle.description }}</td>
        			<td>{{ cycle.dateString }}</td>
        			<td>{{ cycle.ended }}</td>
        			<td>{{ cycle.active }}</td>
        			<td><a href="publication/{{ cycle.id }}"><span class="glyphicon glyphicon-search"></span></a></td>
        		</tr>
      			{% endfor %}
		</table>
  </div>
  <div class="tab-pane fade" id="offered">
  		<h3>Gente que quiere Ayudar</h3>
  		<table class="table table-striped">
          		<tr>
          			<th>Título</th>
          			<th>Descripción</th>
          			<th>Fecha</th>
          			<th>Terminado</th>
          			<th>Activo</th>
          			<th>Ver</th>
          		</tr>
  				{% for cycle in neededCycles %}
  				<tr>
        			<td>{{ cycle.title }}</td>
        			<td>{{ cycle.description }}</td>
        			<td>{{ cycle.dateString }}</td>
        			<td>{{ cycle.ended }}</td>
        			<td>{{ cycle.active }}</td>
        			<td><a href="publication/{{ cycle.id }}"><span class="glyphicon glyphicon-search"></span></a></td>
        		</tr>
      			{% endfor %}
		</table>
  </div>
  <div class="tab-pane fade" id="all">
  		<h3>Todos los Ciclos</h3>
  		<table class="table table-striped">
          		<tr>
          			<th>Título</th>
          			<th>Descripción</th>
          			<th>Fecha</th>
          			<th>Terminado</th>
          			<th>Activo</th>
          			<th>Ver</th>
          		</tr>
  				{% for cycle in allCycles %}
  				<tr>
        			<td>{{ cycle.title }}</td>
        			<td>{{ cycle.description }}</td>
        			<td>{{ cycle.dateString }}</td>
        			<td>{{ cycle.ended }}</td>
        			<td>{{ cycle.active }}</td>
        			<td><a href="publication/{{ cycle.id }}"><span class="glyphicon glyphicon-search"></span></a></td>
        		</tr>
      			{% endfor %}
		</table>
  </div>
</div>

<script type="text/javascript" src="{{ asset('bundles/TeAyudo/js/allPublications.js') }}"></script>
<script>
$('#myTab a:last').tab('show');
</script>
{% endblock %}
